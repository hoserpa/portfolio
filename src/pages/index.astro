<style>
	main {
		margin: auto;
		max-width: calc(100% - 2rem);
		color: #333;
		font-size: 20px;
		line-height: 1.6;
		background-color: #f0f0f0;
		box-shadow: inset 0 0 10px #000000;
		font-family: Arial, sans-serif;
		border-radius: 8px;
		height: 100%;
		width: 100%;
		overflow: hidden;
		-webkit-animation: blinking 0.5s linear;
		-moz-animation: blinking 0.5s linear;
		-o-animation: blinking 0.5s linear;
		animation: blinking 0.5s linear;
	}

	@-webkit-keyframes blinking {
		0% {
			background-color: #333;
			color: #f0f0f0;
		}
		100% {
			background-color: #f0f0f0;
			color: #333;
		}
	}

	.content {
		height: 85%;
		width: 95%;
		margin: 4rem;
		overflow: auto;
	}

	/* Scrollbar */
	.content::-webkit-scrollbar {
		width: 10px;
		margin-right: 10px;
	}
	.content::-webkit-scrollbar-track {
		background: #f0f0f0;
		border: 2px solid #333;
	}
	.content::-webkit-scrollbar-thumb {
		background: #333;
	}
</style>

<script>
	const content: Element | null = document.getElementById("content")
	if (content) {
		content.addEventListener("scroll", event => {
			const main: Element | null = document.getElementById("main")
			if (main) {
				main.animate(
					{
						color: ["#f0f0f0", "#333"]
					},
					1000
				)
			}
		})
	}
</script>
