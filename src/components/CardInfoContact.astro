---
interface Props {
	title: string
	subtitle?: string
	contact: { icon: string; data: string }[]
	socials: { icon: string; data: string; url: string }[]
}

const { title, subtitle, contact, socials } = Astro.props
---

<div class="card">
	<h3>
		{title}
	</h3>
	<h4>{subtitle}</h4>
	<p>
		{
			contact.map(item => (
				<>
					<img class="icon" src={item.icon} alt={item.data} /> {item.data}
					<br />
				</>
			))
		}
		{
			socials.map(item => (
				<>
					<img class="icon" src={item.icon} alt={item.data} />{" "}
					<a href={item.url} target="_blank" rel="noopener noreferrer">
						{item.data}
					</a>
					<br />
				</>
			))
		}
	</p>
</div>
<style>
	.card {
		margin: 1rem;
		margin-bottom: 4rem;
	}
	.card h3 {
		margin-bottom: 0;
	}
	.card h4 {
		opacity: 0.6;
		margin-top: 0;
		margin-bottom: 0.5rem;
	}
	.card .icon {
		position: relative;
		top: 7px;
		left: 5px;
	}
	.card a {
		text-decoration: none;
		color: #333;
	}
	.card a:hover {
		text-decoration: underline;
	}
	.card a:visited {
		text-decoration: none;
		color: #333;
	}
</style>
