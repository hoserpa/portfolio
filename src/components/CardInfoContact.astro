---
interface Props {
	title: string
	subtitle?: string
	details: { icon: string; data: string }[]
}

const { title, subtitle, details } = Astro.props
---

<div class="card">
	<h3>
		{title}
	</h3>
	<h4>{subtitle}</h4>
	<p>
		{
			details.map(item => (
				<>
					<img class="icon" src={item.icon} alt={item.data} /> {item.data}
					<br />
				</>
			))
		}
	</p>
</div>
<style>
	.card {
		margin: 1rem;
	}
	.card h3 {
		margin-bottom: 0;
	}
	.card h4 {
		opacity: 0.6;
		margin-top: 0;
		margin-bottom: 0.5rem;
	}
	.card .icon {
		position: relative;
		top: 7px;
		left: 5px;
	}
</style>
