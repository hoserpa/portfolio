---
interface Props {
	list: { center: string; course: string }[]
}

const { list } = Astro.props
---

<div class="card">
	{
		list.map(item => (
			<>
				<h3>{item.center}</h3>
				<h4>{item.course}</h4>
			</>
		))
	}
</div>
<style>
	.card {
		margin: 1rem;
		margin-bottom: 4rem;
	}
	.card h3 {
		margin-bottom: 0;
	}
	.card h4 {
		opacity: 0.6;
		margin-top: 0;
		margin-bottom: 0.5rem;
	}
</style>
