---
interface Props {
	title: string
	subtitle?: string
	details: {value: string}[]
}

const { title, subtitle, details } = Astro.props
---

<div class="card">
	<h3>
		{title}
	</h3>
	<h4>{subtitle}</h4>
	<p>
		<p>
			{details.map(item => <>{item.value}</br></>)}
		</p>
	</p>
</div>
<style>
	.card {
		margin: 1rem;
		margin-bottom: 4rem;
	}
	.card h3 {
		margin-bottom: 0;
	}
	.card h4 {
		opacity: 0.6;
		margin-top: 0;
		margin-bottom: 0.5rem;
	}
	.card p {
		margin: 1rem;
	}
</style>
