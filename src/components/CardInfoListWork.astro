---
interface Props {
	list: { name: string; position: string; highlights: string[] }[]
}

const { list } = Astro.props
---

<div class="card">
	{
		list.map(item => (
			<>
				<h3>{item.name}</h3>
				<h4>{item.position}</h4>
				<p>
					<ul>
						{item.highlights.map(element => (
							<li>{element}</li>
						))}
					</ul>
				</p>
			</>
		))
	}
</div>
<style>
	.card {
		margin: 1rem;
		margin-bottom: 4rem;
	}
	.card h3 {
		margin-bottom: 0;
	}
	.card h4 {
		opacity: 0.6;
		margin-top: 0;
		margin-bottom: 0.5rem;
	}
</style>
